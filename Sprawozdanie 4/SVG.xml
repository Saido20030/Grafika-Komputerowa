        <g transform="translate(400, 400)">
            <polygon points="-30,100 30,100 0,0" fill="blue"/>
            <rect x="-150" y="-10" width="300" height="20" fill="red" transform="rotate(15)"/>
        </g>
        <g transform="translate(200, 150)">
            <polygon points="-30,100 30,100 0,0" fill="purple"/>
